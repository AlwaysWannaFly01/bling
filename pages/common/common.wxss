.nav {
    display: flex;
    width: 480rpx;
}

.nav view {
    flex: 1;
    text-align: center;
    font-size: 32rpx;
}

.buy,
.rent,
.sell {
    margin-top: 26rpx;
}

.line {
    width: 42rpx;
    height: 6rpx;
    background: #ff7c35;
    border-radius: 3rpx;
    margin: -36rpx auto;
}

.tabbar {
    width: 750rpx;
    height: 98rpx;
    background: #ffffff;
    display: flex;
    position: fixed;
    left: 0;
    bottom: 0;
    align-items: center;
    border-top: 1px solid #eeeeee;
}

.item1,
.item2,
.item3 {
    flex: 1;
    font-size: 20rpx;
    color: #666666;
    text-align: center;
}

.img {
    width: 50rpx;
    height: 50rpx;
}

.loadapp {
    display: flex;
    width: 720rpx;
    height: 84rpx;
    margin-left: 15rpx;
    background: #ffffff;
    padding-left: 30rpx;
    padding-right: 30rpx;
    align-items: center;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.load {
    width: 280rpx;
    color: #999999;
    font-size: 28rpx;
}

.download {
    width: 132rpx;
    height: 54rpx;
    border-radius: 8rpx;
    line-height: 54rpx;
    font-size: 30rpx;
    color: #FF7C35;
    text-align: center;
    border: 1px solid #FF7C35;
}