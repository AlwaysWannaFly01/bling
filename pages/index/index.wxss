/**index.wxss**/
@import '../common/common.wxss';

.resetPosition {
    position: fixed;
    bottom: 423rpx;
    right: 30rpx;
    width: 80rpx;
    height: 80rpx;
}

.form {
    width: 690rpx;
    height: 180rpx;
    background: #fff;
    border-radius: 10rpx;
    position: fixed;
    left: 30rpx;
    bottom: 218rpx;
    padding-left: 24rpx;
    box-sizing: border-box;
}

.budget, .description {
    display: flex;
    align-items: center;
}

.dian1, .dian2 {
    width: 12rpx;
    height: 12rpx;
    border-radius: 6rpx;
    background: #ff7c35;
    margin-right: 15rpx;
}

.dian2 {
    background: #4a90e2;
}

.chooseBudget, .adddescription {
    display: flex;
    width: 594rpx;
    height: 90rpx;
    align-items: center;
    border-bottom: 1px solid #eee;
}

.adddescription {
    border-bottom: none;
}

.text1 {
    margin-right: 15rpx;
    font-size: 30rpx;
    color: #666;
}

.text2 {
    font-size: 26rpx;
    color: #999;
}

.button {
    width: 690rpx;
    height: 80rpx;
    border-radius: 10rpx;
    background: #ff7c35;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    position: fixed;
    left: 30rpx;
    bottom: 118rpx;
}

.search {
    position: fixed;
    top: 180rpx;
    width: 690rpx;
    height: 80rpx;
    left: 30rpx;
    border-radius: 40rpx;
    background-color: #fff;
    z-index: 9999;
    display: flex;
    align-items: center;
}

.search cover-image {
    width: 34rpx;
    height: 34rpx;
    margin-left: 25rpx;
}

.search cover-view {
    margin-left: 25rpx;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
}

.tankuang {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
}

.block {
    width: 576rpx;
    height: 512rpx;
    border-radius: 10rpx;
    background: #fff;
    position: fixed;
    top: 357rpx;
    left: 87rpx;
    z-index: 10000;
    padding: 96rpx 58rpx 96rpx 58rpx;
    box-sizing: border-box;
}

.close {
    width: 42rpx;
    height: 42rpx;
    position: fixed;
    top: 382rpx;
    right: 112rpx;
}

.tiptitle {
    font-size: 42rpx;
    color: #333;
}

.goods {
    font-size: 30rpx;
    color: #666;
    margin-top: 60rpx;
}

.shouquan {
    width: 460rpx;
    height: 90rpx;
    border-radius: 10rpx;
    background: #ffa14d;
    font-size: 32rpx;
    color: #fff;
    margin-top: 70rpx;
    line-height: 90rpx;
}

.shouquan::after {
    border: 0;
}

.prompt {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
}

.frame {
    width: 600rpx;
    height: 350rpx;
    background: #fff;
    border-radius: 8rpx;
    position: fixed;
    top: 500rpx;
    left: 75rpx;
    z-index: 1001;
}

.frame .title {
    text-align: center;
    color: #ff7c35;
    font-size: 32rpx;
    margin-top: 80rpx;
}

.frame .img {
    width: 150rpx;
    height: 150rpx;
    position: fixed;
    top: 430rpx;
    left: 300rpx;
}

.frame .content {
    width: 550rpx;
    margin: 10rpx auto;
    color: #a7a7a7;
    font-size: 28rpx;
    text-align: center;
}

.frame .close {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 15rpx;
    right: 15rpx;
}

.frame .btn {
    width: 600rpx;
    height: 90rpx;
    background: #ff9a4a;
    position: absolute;
    left: 0;
    bottom: 0;
    color: #fff;
}
