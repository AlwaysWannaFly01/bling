/* pages/renthouse/renthouse.wxss */

@import '../common/common.wxss';
.resetPosition {
    position: fixed;
    bottom: 423rpx;
    right: 30rpx;
    width: 80rpx;
    height: 80rpx;
}

.form {
    width: 690rpx;
    height: 180rpx;
    background: #ffffff;
    border-radius: 10rpx;
    position: fixed;
    left: 30rpx;
    bottom: 218rpx;
    padding-left: 24rpx;
    box-sizing: border-box;
}

.budget,
.description {
    display: flex;
    align-items: center;
}

.dian1,
.dian2 {
    width: 12rpx;
    height: 12rpx;
    border-radius: 6rpx;
    background: #FF7C35;
    margin-right: 15rpx;
}

.dian2 {
    background: #4A90E2;
}

.chooseBudget,
.adddescription {
    display: flex;
    width: 594rpx;
    height: 90rpx;
    align-items: center;
    border-bottom: 1px solid #eeeeee;
}

.adddescription {
    border-bottom: none;
}

.text1 {
    margin-right: 15rpx;
    font-size: 30rpx;
    color: #666666;
}

.text2 {
    font-size: 26rpx;
    color: #999999;
}

.button {
    width: 690rpx;
    height: 80rpx;
    border-radius: 10rpx;
    background: #FF7C35;
    font-size: 30rpx;
    color: #ffffff;
    text-align: center;
    line-height: 80rpx;
    position: fixed;
    left: 30rpx;
    bottom: 118rpx;
}

.search {
    position: fixed;
    top: 180rpx;
    width: 690rpx;
    height: 80rpx;
    left: 30rpx;
    border-radius: 40rpx;
    background-color: #fff;
    z-index: 9999;
    display: flex;
    align-items: center;
}

.search cover-image {
    width: 34rpx;
    height: 34rpx;
    margin-left: 25rpx;
}

.search cover-view {
    margin-left: 25rpx;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
}