/* pages/recommend/recommend.wxss */

@import '../common/common.wxss';
page {
    background-color: #f8f8f8;
}

map {
    width: 100%;
    height: 420rpx;
    position: relative;
}

.custmer {
    width: 720rpx;
    height: 84rpx;
    line-height: 84rpx;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
    background-color: #ffffff;
    z-index: 100;
    position: absolute;
    bottom: 0;
    left: 15rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    color: #000000;
}

.shuoming {
    width: 720rpx;
    height: 169rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    background: #ffffff;
    margin-left: 15rpx;
    font-size: 30rpx;
    color: #000000;
    padding: 5rpx 30rpx 30rpx 30rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}