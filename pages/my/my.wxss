/* pages/my/my.wxss */

@import '../common/common.wxss';
page {
    background-color: #F6F6F6;
}

.top {
    width: 750rpx;
    height: 240rpx;
    background: #fff;
    display: flex;
    align-items: center;
    padding-left: 36rpx;
    box-sizing: border-box;
}

.top image {
    border-radius: 50%;
}

.head {
    width: 111rpx;
    height: 111rpx;
}

.btn {
    /* width: 300rpx; */
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 25rpx;
    background: #fff;
    font-size: 34rpx;
    color: rgba(51, 51, 51, 1);
}

.btn::after {
    border: none;
}

.list {
    width: 100%;
    background: #fff;
    margin-top: 15rpx;
}

.row {
    width: 750rpx;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    padding-left: 30rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #eee;
}

.quit {
    width: 100%;
    height: 90rpx;
    background: #fff;
    margin-top: 50rpx;
    text-align: center;
    line-height: 90rpx;
    font-size: 30rpx;
    color: #333;
}

.service {
    flex: 1;
    border: none;
    outline: none;
    background: none;
    font-size: 32rpx;
    text-align: left;
    margin-left: -30rpx;
}

.service:after {
    border: none;
}

.tabbar {
    width: 750rpx;
    height: 98rpx;
    background: #ffffff;
    display: flex;
    position: fixed;
    left: 0;
    bottom: 0;
    align-items: center;
}

.item1,
.item2,
.item3 {
    flex: 1;
    font-size: 20rpx;
    color: #666666;
    text-align: center;
}

.img {
    width: 50rpx;
    height: 50rpx;
}