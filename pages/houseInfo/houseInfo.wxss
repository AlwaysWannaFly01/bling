/* pages/houseInfo/houseInfo.wxss */

.condition {
    width: 100%;
    background: #fff;
    margin-top: 15rpx;
}

.weui-cell__rent {
    width: 25%;
    color: #666;
}

.floor {
    width: 100%;
    height: 100rpx;
    display: flex;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    border-top: 1px solid #f6f6f6;
}

.weui-cell__more {
    padding: 10px 15px 0;
    position: relative;
    display: -webkit-box;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    color: #999;
    font-size: 26rpx;
}

.weui-cell__house {
    padding: 14px 15px 0;
    position: relative;
    display: -webkit-box;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    color: #666;
    font-size: 32rpx;
}

.close {
    position: absolute;
    width: 18px;
    height: 18px;
    top: 6px;
    right: 6px;
}

.footer {
    width: 100%;
    height: 120rpx;
    background: #ffffff;
    position: fixed;
    bottom: 0;
    left: 0;
}

.footer .btn {
    background: -webkit-linear-gradient(left, #FF683A, #FFA14D);
    /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #FF683A, #FFA14D);
    /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #FF683A, #FFA14D);
    /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #FF683A, #FFA14D);
    /* 标准的语法 */
    width: 630rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 88rpx;
    font-size: 32rpx;
    color: #fff;
    border: none;
    outline: none;
    margin-top: 60rpx;
    position: fixed;
    left: 60rpx;
    bottom: 16rpx;
}